<div class="container">
  <div class="container login-form">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-inputs" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-inputs" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center mb-3">
        <%= f.button :submit, "Log in", class:'width-btns-devise' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
